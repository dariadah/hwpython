res_3 = strk_b * logic_a
res_4 = strk_b * a
res_5 = vesh_a * vesh_b
res_6 = vesh_a * logic_b
res_7 = vesh_a * b
res_8 = vesh_b * logic_a
res_9 = vesh_b * a
res_10 = logic_a * logic_b
res_11 = logic_a * b
res_12 = logic_b * a
res_13 = a * b



print('Операции умножения:')
print('Операции Строка * Строка и Строка * Вещественное невозможно выполнить в данной комбинации.')
print()

print('Строка 2: {} * Логическое 1: {} = {}'.format(strk_b, logic_a, res_3))
print('Строка 2: {} * Целое 1: {} = {}'.format(strk_b, a, res_4))
print('Вещественное 1: {} * Вещественное: {} = {}'.format(vesh_a, vesh_b, res_5))
print('Вещественное 1: {} * Логическое 2: {} = {}'.format(vesh_a, logic_b, res_6))
print('Вещественное 1: {} * Целое 2: {} = {}'.format(vesh_a, b, res_7))
print('Вещественное 2: {} * Логическое 1: {} = {}'.format(vesh_b, logic_a, res_8))
print('Вещественное 2: {} * Целое 1: {} = {}'.format(vesh_b, a, res_9))

print()

print('Логическое 1: {} * Логическое 2: {} = {}'.format(logic_a, logic_b, res_10))
print('Логическое 2: {} * Целое 2: {} = {}'.format(logic_a, b, res_11))
print('Логическое 2: {} * Целое 1: {} = {}'.format(logic_b, a, res_12))
print('Целое 1: {} * Целое 2: {} = {}'.format(a, b, res_13))

print()

